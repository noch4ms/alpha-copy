<div class="center jumbotron">
  <h1>ALPHA BLOG</h1>
  <br>
  <p>  <%= link_to "Sign up now", new_user_path, class: "btn btn-danger btn-lg btn-xlarge"%></p>
  <% if session[:user_id] == nil %>
  <p>  <%= link_to "Login", login_path, class: "btn btn-danger btn-lg btn-xlarge"%></p>
  <% else %>
  <p>  <%= link_to "Log out", logout_path, method: :delete, class: "btn btn-danger btn-lg btn-xlarge"%></p>
  <% end %>
</div>
